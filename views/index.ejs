<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/styleOther.css" />
    <link rel="icon" type="image/x-icon" href="./image/logo_green.png">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <title>Dashboard</title>
    <link
      rel="stylesheet"
      href="./fontawesome-free-5.15.4-web//css/all.css"
    />
    <!-- Font CSS -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
    />
  </head>
  <body >
    <div class="container">
      <!--Sidebar-->
    <%- include("./layouts/sidebar") %> 
      <!--Left of Main-->
      <div id="loadingiodashboard">

      </div>
      <main class="main__left" style="display: none;">
        <h1 style="margin: 0;">Dashboard</h1>
        <div class="main__cards">
          <div class="main__cards__items">
            <div style="text-align: center;">
              <span class="material-icons"> people_alt </span>
            <div class="cards__items__infomation">
              <div class="infomation__title">
                <h3>Total People</h3>
                <h1><%= sumUser %></h1>
              </div>
            </div>
            </div>
          </div>
        </div>
        <div class="main__data-dashboard" style="display: flex;justify-content: center;">
         <div style="height: 50%;width: 85%;background-color: white;padding:12px;border-radius: 15px;box-shadow: 1px 5px 5px 1px rgba(0, 0,0, .2);">
          <canvas id="myChart" height="180%" style=""></canvas>
         </div>
        </div>
        <h3 style="text-align: center;margin-top: 1rem;">User dashboard</h3>
      </main>
      <!--right of Main-->
      <div class="main__right">
        <div class="main__cards" style="width: 100%;">
          <div class="main__cards__items" style="width: 64%;height: 106%;">
            <div style="text-align: center;">
              <span class="material-icons"> question_mark </span>
            <div class="cards__items__infomation">
              <div class="infomation__title">
                <h3>Total Question</h3>
                <h1><%= sumQuestion %></h1>
              </div>
            </div>
            </div>
          </div>
        </div>
        <div class="main__data-dashboard" style="margin-top: 3.8rem;width: 100%;">
          <div style="height: 100%;width: 100%;background-color: white;padding:12px;border-radius: 15px;box-shadow: 1px 5px 5px 1px rgba(0, 0,0, .2);">
           <canvas id="myChartQuestion" height="198%" style=""></canvas>
          </div>
         </div>
         <h3  style="text-align: center;margin-top: 1rem;">Question dashboard</h3>
      </div>
    </div>
   
    <%- include ("./layouts/script.ejs") %>
    
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <!--<script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>-->
    <script type="module" src="./js/dashboard/dashboard.js"></script>
  </body>
</html>
